<Window x:Class="ChessDimensions.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessDimensions" xmlns:controls="clr-namespace:ChessDimensions.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <controls:ChessPlayArea Grid.Column="1"></controls:ChessPlayArea>

        <!-- Left panel-->
        <StackPanel Grid.Column="0">
            <Button Click="Button_Click">New Game</Button>
        </StackPanel>
    </Grid>
</Window>
